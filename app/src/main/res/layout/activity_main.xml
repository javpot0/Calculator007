<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background1">

    <LinearLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/background2">

        <LinearLayout
            android:id="@+id/linear_vertical1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_horizontal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_backspace"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray"
                    android:foreground="@android:drawable/ic_input_delete" />

                <Button
                    android:id="@+id/button_ce"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray"
                    android:text="CE" />

                <Button
                    android:id="@+id/button_c"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray"
                    android:text="C" />

                <Button
                    android:id="@+id/button_minus"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray"
                    android:text="+/-" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_horizontal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_7"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray2"
                    android:text="7" />

                <Button
                    android:id="@+id/button_8"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray2"
                    android:text="8" />

                <Button
                    android:id="@+id/button_9"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray2"
                    android:text="9" />

                <Button
                    android:id="@+id/button_divide"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray"
                    android:text="/" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_horizontal3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_4"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray2"
                    android:text="4" />

                <Button
                    android:id="@+id/button_5"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray2"
                    android:text="5" />

                <Button
                    android:id="@+id/button_6"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray2"
                    android:text="6" />

                <Button
                    android:id="@+id/button_multiply"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray"
                    android:text="*" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_horizontal4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_1"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray2"
                    android:text="1" />

                <Button
                    android:id="@+id/button_2"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray2"
                    android:text="2" />

                <Button
                    android:id="@+id/button_3"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray2"
                    android:text="3" />

                <Button
                    android:id="@+id/button_subtract"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_horizontal5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_0"
                    style="@style/buttons"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray2"
                    android:text="0" />

                <Button
                    android:id="@+id/button_dot"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray2"
                    android:text="." />

                <Button
                    android:id="@+id/button_addition"
                    style="@style/buttons"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/custom_gray"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_vertical2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_rootsquare"
                style="@style/buttons"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/custom_gray"
                android:text="âˆš" />

            <Button
                android:id="@+id/button_percent"
                style="@style/buttons"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/custom_gray"
                android:text="%" />

            <Button
                android:id="@+id/button_divideby"
                style="@style/buttons"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/custom_gray"
                android:text="1/x" />

            <Button
                android:id="@+id/button_equals"
                style="@style/buttons"
                android:layout_weight="1"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/custom_gray"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/input"
        android:inputType="numberSigned"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/linear_main"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="right|center"
        android:background="@drawable/button_rounded"
        android:backgroundTint="#BF111111"
        android:textColor="@color/custom_gray2"
        android:textSize="72dp"
        android:text="0" />

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_above="@id/input"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:gravity="right|top"
        android:textColor="@color/custom_gray"
        android:textSize="38dp" />
</RelativeLayout>